DataSources:
# 数据源，linux下路径中要用“/”,不能用“\”
  US8K:
    base_dir: c:\us8k
  ESC50:
    base_dir: c:\esc50
  Province:
    base_dir: \\10.166.168.123\典型城市声纹数据库-标签过
  Birdclef:
    base_dir: \\10.166.168.123\BirdClef2021
Features:
  SPECTROGRAM:
    n_fft: 1024
    hop_length: 512
    win_length: None
  MEL_SPECTROGRAM:
    sample_rate: 44100
    n_fft: 1024
    n_mels: 128
    hop_length: 512
    win_length: None
  MFCC:
    sample_rate: 44100
    n_mfcc: 64
    n_fft: 1024
    n_mels: 128
    hop_length: 512
  LFCC:
    sample_rate: 44100
    n_lfcc: 64
    n_fft: 1024
    hop_length: 512
    win_length: None

Train:
  epochs: 10
  max_epochs: 100
  batch_size: 32
  learning_rate: 0.001
  optimizer: adam
  criterion: cross_entropy
  scheduler: reduce_lr_on_plateau
  patience: 5
  factor: 0.1
  min_lr: 1e-6
  weight_decay: 0.0
  num_workers: 4
  pin_memory: True
  seed: 42
  model_path : None
  optimizer_path: None
  loss_type: CrossEntropyLoss
